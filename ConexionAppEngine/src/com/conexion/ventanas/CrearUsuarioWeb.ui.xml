<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
		font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel width="250px" height="250px">
		<g:VerticalPanel width="250px" height="250px">
			<g:Label text="Nombre" width="100%" />
			<g:TextBox ui:field="tbNombreUsuario" width="100%" height="32" />
			<g:Label text="Clave" width="100%" />
			<g:PasswordTextBox ui:field="tbClaveUsuario" width="100%"
				height="32" />
			<g:Label text="Rol" width="100%" />
			<g:ListBox ui:field="tbRol" selectedIndex="0" width="100%"
				height="32">
				<g:item value='0'>
					Android
				</g:item>
				<g:item value='1'>
					Administrador
				</g:item>
			</g:ListBox>
			<g:LayoutPanel width="100%" height="12px" />
			<g:Button ui:field="btnAceptar" width="100%">Aceptar</g:Button>
			<g:Button ui:field="btnModificar" width="100%">Modificar</g:Button>
			<g:Label ui:field="errorLabel" width="100%"></g:Label>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 